<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardReviewActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:background="@drawable/eclipse2"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:src="@drawable/back_arrow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.074"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.228" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="76dp"
                    android:fontFamily="@font/mulish_semibold"
                    android:text="Payment Method"
                    android:textColor="@color/black"

                    android:textSize="35dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7"
                    app:layout_constraintVertical_bias="0.14"
                    tools:layout_editor_absoluteX="16dp">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/eclipse_4" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/line2_img" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/eclipse_4" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/line2_img" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/eclipse3"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/like1"
                            android:layout_gravity="center"/>


                    </FrameLayout>


                </LinearLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>






        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Name on card"
                android:textColor="@color/black"
                android:fontFamily="@font/mulish_semibold"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="17dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:padding="25dp"
                android:textColor="@color/black"
                android:hint="0000 0000 0000"
                android:inputType="number"
                android:layout_marginRight="15dp"
                android:background="@drawable/grey_background"
                android:fontFamily="@font/mulish_semibold"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Expiry Date"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mulish_semibold"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="17dp"/>


                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:inputType="number"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:paddingBottom="25dp"
                        android:paddingTop="25dp"
                        android:textColor="@color/black"
                        android:hint="MM/YYYY"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/grey_background"
                        android:fontFamily="@font/mulish_semibold"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="15dp"/>




                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="CVV"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mulish_semibold"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="20dp"/>


                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"


                        android:paddingLeft="58dp"
                        android:paddingRight="58dp"
                        android:paddingBottom="25dp"
                        android:paddingTop="25dp"
                        android:textColor="@color/black"
                        android:hint="123"
                        android:inputType="number"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/grey_background"
                        android:fontFamily="@font/mulish_semibold"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="15dp"/>




                </LinearLayout>






            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_margin="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/line4_img"/>








        </LinearLayout>








    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>